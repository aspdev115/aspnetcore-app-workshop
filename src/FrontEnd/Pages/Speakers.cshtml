@page
@model SpeakersModel
@{
    ViewData["Title"] = "Speakers";
}

<div class="speaker-list">
    <h1>NDC Oslo 2017</h1>

    <div class="row">
        @foreach (var speaker in Model.Speakers)
        {
            <div class="col-md-3">
                <div class="panel panel-default speaker">
                    <div class="panel-body">
                        <a asp-page="Speaker" asp-route-id="@speaker.ID"><h3 class="panel-title">@speaker.Name</h3></a>
                        <ul>
                            @foreach (var session in speaker.Sessions)
                            {
                                <li><a asp-page="Session" asp-route-id="@session.ID">@session.Title</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>